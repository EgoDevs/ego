{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "module": "commonjs", //ii
    "target": "es2018", //ii
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "/",
    "rootDir": ".",
    "importHelpers": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      // "cycle$/*": ["cycle/frontend/cycle/*"],
      "@context/*": ["clients/context/*"],
      "@tests/*":["clients/tests/*"],
      "@scripts/*":["scripts/*"],
      "@/*": ["clients/*"]
    },
    "noImplicitAny": false,
    "downlevelIteration": true
  },
  "include": [
    "clients/**/*", 
    "clients/context/**/*", 
    "scripts/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests",
    "src/**/*.test.ts",
    "src/frontend/generated",
    "src/frontend/src/component/iconfont",
    "**/canisters",
    "webpack.config.js",
    "*.js",
    "scripts/**/*",
    "agents/*"
  ]
}
