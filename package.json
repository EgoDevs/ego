{
  "name": "ego",
  "version": "0.0.1",
  "description": "EGO monorepo",
  "private": true,
  "scripts": {
    "script:fixtures": "swc ./clients/fixtures -d dist",
    "script:bootstrap": "swc ./scripts -d dist",
    "ego:pre": "pnpm run script:bootstrap && node ./dist/ic_deployer.js --clean",
    "ego:bootstrap": "pnpm run ego:clean && pnpm run ego:create",
    "ego:build": "node ./dist/builder.js",
    "ego:clean": "node ./dist/deployer.js --clean",
    "ego:create": "node ./dist/deployer.js --create",
    "ego:install": "node ./dist/deployer.js --install",
    "ego:reinstall": "node ./dist/deployer.js --reinstall",
    "ego:upgrade": "node ./dist/deployer.js --upgrade",
    "ego:post_install": "pnpm run ego:post_install:infra && pnpm run ego:post_install:apps",
    "ego:post_install:infra": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose -t infra",
    "ego:post_install:apps": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose -t apps",
    "ego:post_install:project": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose -t",
    "ego:frontend": "cd ./clients/ego_dev_frontend && pnpm install && pnpm run dev",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns=/post_install/ --testPathPattern=/ego_dev/",
    "ego:script": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --testPathIgnorePatterns=/post_install/ --testPathPattern=/scripts/ -t",
    "format": "prettier --write {scripts,clients}/**/*.{js,ts,less,json}",
    "format:json": "prettier --write artifacts/**/*.json",
    "format:idl": "prettier --write clients/idls/**/*.ts",
    "poc:setup": "pnpm run ego:pre && pnpm run ego:bootstrap && pnpm run ego:build && pnpm ego:install && pnpm run ego:post_install:project ego_ops",
    "ego:create:live": "cross-env NODE_ENV=production node ./dist/deployer.js --create",
    "ego:install:live": "cross-env NODE_ENV=production node ./dist/deployer.js --install",
    "ego:reinstall:live": "cross-env NODE_ENV=production node ./dist/deployer.js --reinstall",
    "ego:upgrade:live": "cross-env NODE_ENV=production node ./dist/deployer.js --upgrade",
    "ego:post_install:project:live": "cross-env NODE_ENV=production NODE_OPTIONS=--experimental-vm-modules jest --verbose -t",
    "ego:deploy": "pnpm run ego:pre && pnpm run ego:bootstrap && pnpm run ego:build && pnpm ego:install && pnpm ego:post_install:project ego_ops"
  },
  "author": "devs@astrox",
  "license": "ISC",
  "dependencies": {
    "@dfinity/agent": "0.13.1",
    "@dfinity/candid": "0.13.1",
    "@dfinity/identity": "0.13.1",
    "@dfinity/principal": "0.13.1",
    "@ethers-ancillary/bsc": "^0.0.3",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/hash": "^5.7.0",
    "@ethersproject/keccak256": "^5.7.0",
    "@ethersproject/logger": "^5.7.0",
    "@ethersproject/properties": "^5.7.0",
    "@ethersproject/signing-key": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.141",
    "@swc/jest": "^0.2.20",
    "@types/mockjs": "^1.0.6",
    "@types/yargs": "^17.0.10",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "buffer": "^6.0.3",
    "crc": "^4.1.1",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.5",
    "ethers": "^5.7.0",
    "js-sha256": "^0.9.0",
    "mockjs": "^1.1.0",
    "starkbank-ecdsa": "^1.1.5",
    "tiny-secp256k1": "^2.2.1",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.18",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.5.0",
    "tsc-alias": "^1.6.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}